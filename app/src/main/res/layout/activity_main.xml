<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/photo_2024_06_16_05_45_58"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/_text1"
        app:layout_constraintVertical_bias="0.35"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        android:textSize="35sp"
        android:text="Добро пожаловать!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/_text2"
        app:layout_constraintTop_toBottomOf="@id/_text1"
        android:paddingLeft="70dp"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:text="      Выполните вход \n  или зарегистрируйтесь."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/_text3"
        android:layout_width="370sp"
        android:layout_height="62sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/solor"
        android:backgroundTint="@color/white"
        android:hint="Введите вашу почту"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintTop_toBottomOf="@id/_text2"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/_text4"
        app:layout_constraintTop_toBottomOf="@id/_text3"
        android:layout_marginTop="25sp"
        android:textSize="19sp"
        android:hint="Введите пароль"
        android:background="@drawable/solor"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="370sp"
        android:layout_height="62sp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/_button"
        android:textSize="32sp"
        android:textStyle="bold"
        android:text="Войти"
        android:layout_width="370sp"
        android:layout_height="62sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/_text4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/gray"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/forgot_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="Забыл пароль?"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="25dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
